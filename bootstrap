#!/bin/bash
set -e

echo "Bootstrapping..."
dub build --compiler=dmd
dub build --root source/wrap --compiler=dmd

cp source/wrap/bb-wrap-bootstrap ./

# Build bblua
make --directory source/bblua
cp source/bblua/bblua ./

echo "Building with the One True Build System..."
rm -f .*bb.json.state
./bb-bootstrap build
