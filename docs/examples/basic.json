{
    "rules": [
        {
            "inputs": ["foo.c"],
            "task": ["gcc", "-c", "foo.c", "-o", "foo.o"],
            "outputs": ["foo.o"]
        },
        {
            "inputs": ["bar.c"],
            "task": ["gcc", "-c", "bar.c", "-o", "bar.o"],
            "outputs": ["bar.o"]
        },
        {
            "inputs": ["foo.o", "bar.o"],
            "task": ["gcc", "foo.o", "bar.o", "-o", "foobar"],
            "outputs": ["foobar"],
            "description": "Linking"
        }
    ]
}
